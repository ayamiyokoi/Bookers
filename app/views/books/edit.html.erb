<h1>Editing Book</h1>
 <!--form_with部分 -->
<%= form_with model:@book, local:true do |f| %>
<% if @book.errors.any? %>
  <ul>
    <% @book.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>


  <p><%= f.label :Title%><br>
  <%= f.text_field :title %></p>
  <p><%= f.label :Body%><br>
  <%= f.text_area :body %></p>

  <p><%= f.submit 'Update Book' %></p>
<% end %>


  <%= link_to "Show", book_path(@book) %>
  <%= link_to "back", '/books' %>