<body >

<!--テーブル-->
<h1>Books</h1>
<table>
  <!--タイトル-->
  <thred>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thred>
  <!--内容-->
  <tbody>
     <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure？"%></td>
    </tr>
     <% end %>
  </tbody>
</table>

<!--フォーム-->
<h2>New book</h2>
 <!--form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>

  <p><%= f.label :Title%><br>
  <%= f.text_field :title %></p>
  <p><%= f.label :Body%><br>
  <%= f.text_area :body %></p>


  <p><%= f.submit 'Create Book' %></p>

<% end %>
</body>